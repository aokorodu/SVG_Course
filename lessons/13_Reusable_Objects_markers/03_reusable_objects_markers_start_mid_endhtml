                    <defs>

                        <marker id="box" refX="5" refY="5" markerWidth="10" markerHeight="10">
                            <rect x="0" y="0" width="10" height="10" fill="black" stroke="black" stroke-width="2"/>
                        </marker>

                        <marker id="polymarker" refX="5" refY="5" markerWidth="10" markerHeight="10">
                            <circle cx="5" cy="5" r="2.5" fill="red">
                            </circle>
                        </marker>

                        <marker id="polymarker_arrow" refX="5" refY="5" markerWidth="10" markerHeight="10"
                            orient="auto">
                            <path d="M 0,0 L 0,10 L 10,5 Z" fill="red">
                            </path>
                        </marker>

